set nocompatible
filetype on
filetype plugin on
filetype indent on

syntax on
set number

set shiftwidth=4
set tabstop=4
set expandtab
set nobackup
set nowrap

set incsearch
set showcmd
set showmode
set hlsearch
set history=1000

set wildmenu
set wildmode=list:longest

set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx
set ve+=all
